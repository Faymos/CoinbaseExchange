<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#85C1E9"
    tools:context="com.example.android.coinbaseexchange.HomeActivity">

    <LinearLayout
        android:id="@+id/linear_btc"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#0D0D41"
        android:layout_margin="5dp"
        >

        <TextView
            android:id="@+id/btc_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC COIN"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="#F2F2FA"
            android:layout_gravity="center"
            />


        <ImageView
            android:id="@+id/bitcoin_image"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/bitcoin"
            android:layout_margin="10dp"
            android:layout_marginBottom="20dp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_eth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="#0D0D41"
        android:layout_margin="5dp"
        >
        <TextView
            android:id="@+id/eth_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ETH COIN"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#F2F2FA"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/ethereum_image"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/ethereum"
            android:layout_margin="10dp"/>
    </LinearLayout>

</LinearLayout>

